<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <factos.ufpi.br.projetox.extras.CustomImageView
        android:id="@+id/iv_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/gradiente_imagem"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/tipoEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"/>
    <TextView
        android:textColor="@color/colortext"
        android:layout_marginTop="180dp"
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tipoEvento"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        />

    <TextView
        android:textColor="@color/colortext"
        android:layout_below="@+id/tv_nome"
        android:id="@+id/tv_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tipoEvento"
        android:paddingLeft="10dp"
        android:textSize="14sp"
       />

    <TextView
        android:textColor="@color/colortext"
        android:layout_below="@+id/tv_nome"
        android:layout_toRightOf="@+id/tv_local"
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        />

</RelativeLayout>
