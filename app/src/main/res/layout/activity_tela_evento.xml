<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="factos.ufpi.br.projetox.TelaEvento">

    <!-- Top Toolbar -->
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_top_tabs" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        >

         <LinearLayout
            android:id="@+id/linear_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/top"
            android:background="@color/colorFundo">

             <ImageView
                 android:id="@+id/image_evento"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:src="@drawable/evento"
                 />

             <LinearLayout
                 android:id="@+id/linearData"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/image_evento"
                 android:orientation="horizontal"
                 android:padding="8dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="Data Início:"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"
                     android:textAlignment="textStart"
                     />

                 <TextView
                     android:id="@+id/textData"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"
                     android:layout_marginLeft="160dp"
                     />

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/linearDesc"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/linearData"
                 android:orientation="vertical"
                 android:padding="8dp"
                 >

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="DESCRIÇÃO:"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"/>

                 <TextView
                     android:id="@+id/textDesc"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:lines="5"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"/>

             </LinearLayout>

             <LinearLayout
                 android:id="@+id/linearValor"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="8dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="Valor:"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"
                     android:textAlignment="textStart"
                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:id="@+id/textValor"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"
                     android:layout_marginLeft="270dp"
                     />

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="8dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="Endereço:"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"
                     android:textAlignment="textStart"
                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:id="@+id/textLocal"
                     android:textColor="@color/colortext"
                     android:textStyle="bold"
                     android:textSize="16dp"
                     android:layout_marginLeft="100dp"
                     />

             </LinearLayout>


         </LinearLayout>


    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom">

        <!-- bottom navigation-->
        <include layout="@layout/layout_bottom_navagation_view"/>

    </RelativeLayout>


</RelativeLayout>
